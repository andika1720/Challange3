<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.FragmentKonfirmasiPesanan">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/metode_pengiriman"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_takeaway"
                android:layout_width="160dp"
                android:layout_height="50dp"
                app:cornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/ambil_sendiri"
                app:layout_constraintTop_toBottomOf="@id/tv_delivery"
                app:layout_constraintStart_toStartOf="parent"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_delivery"
                android:layout_width="160dp"
                android:layout_height="50dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/dikirim"
                app:layout_constraintTop_toBottomOf="@id/tv_delivery"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_takeaway"
                android:background="@color/cream"/>

                
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_confirm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line"/>

            <View
                android:id="@+id/view_line2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/rv_confirm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/cream"/>

            <TextView
                android:id="@+id/Pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metode_pembayaran"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/view_line2"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_Tunai"
                android:layout_width="160dp"
                android:layout_height="50dp"
                app:cornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/tunai"
                app:layout_constraintTop_toBottomOf="@id/Pembayaran"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_Ewallet"
                android:layout_width="160dp"
                android:layout_height="50dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/dompet_digital"
                app:layout_constraintTop_toBottomOf="@id/Pembayaran"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/view_line3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_Tunai"
                android:background="@color/cream"/>

            <TextView
                android:id="@+id/Ringkasan_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ringkasan_pembayaran"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/view_line3"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_name_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tittle"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Ringkasan_payment" />

            <TextView
                android:id="@+id/tv_quantity_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name_confirm" />
            <TextView
                android:id="@+id/total_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_quantity_confirm"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_price_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_confirm" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_payment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/pesan"
                android:textColor="@color/black"
                android:backgroundTint="@color/cream"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cornerRadius="8dp"
                tools:ignore="VisualLintButtonSize" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>